= form_tag request.path, method: :get, class: 'group-filter-form', id: 'group-filter-form' do |f|
  = search_field_tag :filter_groups, params[:filter_groups],
    placeholder: 'Filter by name...',
    class: 'group-filter-form-field form-control input-short js-groups-list-filter',
    spellcheck: false,
    id: 'group-filter-form-field',
    tabindex: "2"

  - if params[:sort].present?
    = hidden_field_tag :sort, params[:sort]
